{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"lib": ["ES2021"],
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"include": [
		"nodes/MarkdownCodeBlockParser/**/*",
		"credentials/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test-markdown",
		"test-runner.js"
	]
}

